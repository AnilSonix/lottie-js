{
  "name": "lottie-js",
  "version": "0.0.1",
  "description": "Lottie JSON model for Javascript/Typescript",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/LottieFiles/lottie-js",
  "license": "UNLICENSED",
  "keywords": [],
  "scripts": {
    "build": "rollup -c",
    "docs": "typedoc src",
    "prepublishOnly": "yarn run lint && npm run build",
    "lint": "eslint --fix --ext .ts,.js .",
    "test": "jest --watch --coverage"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-strip": "2.0.0",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.2",
    "@typescript-eslint/eslint-plugin": "4.2.0",
    "@typescript-eslint/parser": "4.2.0",
    "cross-fetch": "3.0.6",
    "esbuild": "0.7.13",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-jest": "24.0.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "release-it": "^14.0.4",
    "rollup": "2.29.0",
    "rollup-plugin-dts": "1.4.13",
    "rollup-plugin-esbuild": "2.5.0",
    "ts-jest": "26.4.0",
    "typedoc": "0.19.2",
    "typedoc-plugin-mermaid": "1.3.0",
    "typescript": "4.0.3"
  },
  "files": [
    "dist/**/*",
    "!**/*.map",
    "!**/__tests__"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,css,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,ts}": [
      "eslint --fix --ext .ts,.js ."
    ]
  }
}
